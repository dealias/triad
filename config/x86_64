a:=$(shell which icpc 2>&1 | tail -c5)
ifeq ($(a),icpc)
FLAGS = -ansi-alias -malign-double -fp-model fast=2 -diag-disable 654
CXX = icpc $(FLAGS)
CC = icpc $(FLAGS)
else
CXX = g++ -Wall -ansi -fsized-deallocation
CC = gcc -Wall -ansi
endif

MAKEDEPEND = $(CXX) -M -DDEPEND
FFT = fftw++
LIBFFT = -lfftw3

