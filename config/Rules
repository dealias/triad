.cc.o:
	$(C++) $(OPT) $(INCL) -o $@ -c $<

.PHONY: triad clean

triad:
	make -f $(TRI)/config/Depend compile NAME=triad

clean:
	rm -rf *.o *.$(D) *mon.out $(CLEAN)

%.$(D): %.cc
	$(MAKEDEPEND) $(INCL) $(MDOPTS) $< > $@

ifneq ($(wildcard $(TRI)/config/$(HOSTTYPE).rules),)
include $(TRI)/config/$(HOSTTYPE).rules
endif
