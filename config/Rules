.cc.o:
	$(C++) $(OPT) $(INCL) -o $@ -c $<

clean:
	rm -f *.o *mon.out $(ALL)

rgb: rgb.cc msg.cc new.cc
	$(C++) $(OPT) $(INCL) -o $(USER)/bin/rgb rgb.cc msg.cc new.cc $(LIB)

%.$(D): %.cc
	$(MAKEDEPEND) $(INCL) $(MDOPTS) $< > $@

all: $(TRIAD:=.o)
	$(C++) $(OPT) -o triad $(TRIAD:=.o) $(LIB)

include $(TRIAD:=.$(D))

