.cc.o:
	$(C++) $(OPT) $(INCL) -o $@ -c $<

clean:
	rm -f *.o *mon.out $(ALL)

%.$(D): %.cc
	$(MAKEDEPEND) $(INCL) $(MDOPTS) $< > $@

all: $(TRIAD:=.o)
	$(C++) $(OPT) -o triad $(TRIAD:=.o) $(LIB)

rgb: $(RGB:=.cc)
	$(C++) $(OPT) -o $(HOME)/bin/rgb $(RGB:=.cc) $(LIB)

ifneq ($(wildcard $(TRI)/config/$(HOSTTYPE).rules),)
include $(TRI)/config/$(HOSTTYPE).rules
endif

include $(TRIAD:=.$(D))

